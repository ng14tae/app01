<header class="navbar bg-base-300 px-4 shadow-sm">
    <div class="flex-1">
      <%= link_to "*****", root_path, class: "text-2xl font-bold" %>
    </div>
    <div class="flex-none space-x-2">
      <% if user_signed_in? %>
        <span class="text-sm font-semibold">
          <%= current_user.name %>さん
        </span>
        <%= link_to destroy_user_session_path, method: :delete, data: { turbo: false }, class: "btn btn-outline" do %>
          <i class="fa-solid fa-right-from-bracket"></i>
          <%= t('header.logout') %>
        <% end %>
      <% else %>
        <%= link_to new_user_registration_path, class: "btn btn-outline" do %>
          <i class="fa-solid fa-user-plus"></i>
          <%= t('header.sign_up') %>
        <% end %>
        <%= link_to new_user_session_path, class: "btn btn-outline" do %>
          <i class="fa-solid fa-right-to-bracket"></i>
          <%= t('header.login') %>
        <% end %>
      <% end %>
    </div>
  </header>