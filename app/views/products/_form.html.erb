<div class="container mx-auto">
    <div class="flex justify-center">
    <div class="w-full max-w-lg">
        <%= form_with model: @product, class: "new_product" do |f| %>
            <div class="mb-4">
            <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500" %>
            </div>
            <div class="mb-4">
            <%= f.label :body, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :body, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500", rows: "3", placeholder:"どうして欲しいのか" %>
            </div>
            <div class="mb-4">
            <%= f.label :URL, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :body, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500" %>
            </div>
            <%= f.submit class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600" %>
        <% end %>
        </div>
    </div>
</div>
