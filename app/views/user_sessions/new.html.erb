<% content_for(:title, t('.title')) %>
<% flash.each do |message_type, message| %>
  <div class="alert <%= message_type == 'success' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %> p-4 mb-4 rounded-md">
    <%= message %>
  </div>
<% end %>

<div class="container mx-auto">
  <div class="flex justify-center">
    <div class="w-full max-w-md">
      <h1 class="text-2xl font-bold text-center mb-6"><%= t('.title') %></h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500" %>
        </div>
        <%= f.submit t(".login"), class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600" %>
      <% end %>
      <div class="text-center mt-4">
        <%= link_to t(".to_register_page"), new_user_path, class: "text-blue-600 hover:underline" %>
        <%= link_to t(".password_forget"), "#", class: "text-blue-600 hover:underline" %>
      </div>
    </div>
  </div>
</div>